<div class="box-form">
    <form action="/reports-file" method="POST" enctype="multipart/form-data" class="">
        <input type="hidden" name="client_id" value="<%=client_id%>">

        <div class="border-grey container form-client">
            <button type="button" class="btn label-form">
                <h1> <span class="badge grey"><i class='far fa-file-pdf text-white'></i> Iserir Relatórios</span></h1>
            </button>
            <div class="form-center-input">
                <% if(msg){%>
                    <div class="alert alert-success alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Relatório: </strong> Inserido com sucesso!!!.
                      </div>
                  <%}%> 
                <div class="input-group mb-3 input-forms ">
                    <span class="input-group-text bg-primary text-white border border-primary" id="basic-addon1"><i
                            class='fas fa-calendar-alt' style='font-size:24px'></i></span>
                    <input type="date" name="date" class="form-control border border-primary border border-primary"
                        placeholder="Razão Social" aria-label="razao-social" aria-describedby="basic-addon1">
                </div>
                <div class="input-group mb-3 input-forms ">
                    <span class="input-group-text bg-primary text-white border border-primary" id="basic-addon1"><i
                            class='fas fa-calendar-alt' style='font-size:24px'></i></span>
                    <select class="form-select  border border-primary border border-primary fs-3" name="report_id"
                        aria-label="">
                        <option selected disabled>Tipo de Relátorio</option>
                        <% reports.forEach(report => {%>
                        <option value=<%=report.id%>><%=report.name%></option>
                        <%});%>
                    </select>
                </div>
                <div class="input-group mb-3 input-forms">
                    <span class="input-group-text bg-primary text-white border border-primary" id="basic-addon1"><i
                            class='fas fa-file-upload' style='font-size:24px'></i></span>
                    <input type="file" name="path" class="form-control border border-primary custom-file-input"
                        placeholder="Adicione um relatório" aria-label="razao-social" aria-describedby="basic-addon1">
                </div>


                <div class="input-group mb-3 input-forms d-flex justify-content-end ">
                    <button class="btn btn-primary text-white" type="submit"><i class='fas fa-save'
                            style='font-size:2rem'> Salvar</i> </button>
                </div>
            </div>
        </div>

    </form>

</div>