<br>    
<div class="box-form">
    <form action="/clients<%if(update){%>?_method=PUT<% } %>" method="POST" class="">
        <%if(update){%> <input type="hidden" name="id" value="<%= clients.id %> "> <%}%> 
        <div class="border border-info container form-client">
            <button type="button" class="btn label-form">
                <h1> <span class="badge bg-info"><i class='fas fa-handshake text-white'></i> Cadastro
                        de Clientes</span></h1>
            </button>

            <div class="form-center-input">
             <% if(erro){%>
                <div class="alert alert-info alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Cliente</strong> Já consta em nossa base de dados!.
                  </div>
              <%}%> 
            <div class="input-group mb-3 input-forms">
                <span class="input-group-text bg-info text-white" id="basic-addon1"><i class='fas fa-building'
                        style='font-size:24px'></i></span>
                <input type="text" <%if(update){%>value="<%=clients.company%>"<%}%>  name="company" class="form-control" placeholder="Razão Social" aria-label="razao-social"
                    aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-3 input-forms">
                <span class="input-group-text bg-info text-white" id="basic-addon1"><i class='far fa-newspaper'
                        style='font-size:24px'></i></span>
                <input type="text" name="cnpj" <%if(update){%>value="<%=clients.cnpj%>"<%}%> class="form-control" placeholder="Cnpj" aria-label="razao-social"
                    aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-3 input-forms">
                <span class="input-group-text bg-info text-white" id="basic-addon1"><i class='far fa-envelope-open'
                        style='font-size:24px'></i></span>
                <input type="text" name="email" <%if(update){%>value="<%=clients.email%>"<%}%>class="form-control" placeholder="E-mail" aria-label="razao-social"
                    aria-describedby="basic-addon1">

                <span class="input-group-text bg-info text-white" id="basic-addon1"><i class='fas fa-mobile-alt'
                        style='font-size:24px'></i></span>
                <input type="text"  name="telephone" <%if(update){%>value="<%=clients.telephone%>"<%}%> class="form-control" placeholder="Telefone" aria-label="razao-social"
                    aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-3 input-forms">
                <span class="input-group-text bg-info text-white" id="basic-addon1"><i class='fas fa-map-signs'
                        style='font-size:24px'></i></span>
                <input type="text" name="zip_code" <%if(update){%>value="<%=clients.zip_code%>"<%}%> class="form-control" placeholder="CEP" aria-label="razao-social"
                    aria-describedby="basic-addon1" >
                    <span class="input-group-text bg-info text-white" id="basic-addon1"><i class='fas fa-map-marker-alt'
                        style='font-size:24px'></i></span>
                <input type="text" name="andress" <%if(update){%>value="<%=clients.andress%>"<%}%> class="form-control" placeholder="Endereço" aria-label="razao-social"
                    aria-describedby="basic-addon1" style="width: 40%;">
            </div>
            <div class="input-group mb-3 input-forms">
                <span class="input-group-text bg-info text-white" id="basic-addon1"><i class='fas fa-map-marked-alt'
                        style='font-size:24px'></i></span>
                <input type="text" name="district" <%if(update){%>value="<%=clients.district%>"<%}%> class="form-control" placeholder="Bairro" aria-label="razao-social"
                    aria-describedby="basic-addon1" style="width: 30%;" >
                <span class="input-group-text bg-info text-white" id="basic-addon1"><i class='fas fa-city'
                        style='font-size:24px'></i></span>
                <input type="text" name="city" <%if(update){%>value="<%=clients.city%>"<%}%> class="form-control" placeholder="Cidade" aria-label="razao-social"
                    aria-describedby="basic-addon1" style="width: 30%;" >
                    <span class="input-group-text bg-info text-white" id="basic-addon1"><i class='far fa-map'
                        style='font-size:24px'></i></span>
                <input type="text" name="uf" <%if(update){%>value="<%=clients.uf%>"<%}%> class="form-control" placeholder="UF" aria-label="razao-social"
                    aria-describedby="basic-addon1" style="width: 10%;">
                  
            </div>
            <div class="input-group mb-3 input-forms d-flex justify-content-end ">
            <button class="btn btn-info text-white" type="submit"><i class='fas fa-save' style='font-size:2rem'> Salvar</i> </button>
            </div>
        </div>
        </div>

    </form>

</div>