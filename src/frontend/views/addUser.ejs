<div class="box-form">
    <form action="/clients<%if(update){%>?_method=PUT<% } %>" method="POST" class="">
        <%if(update){%> <input type="hidden" name="id" value=" "> <%}%> 
        <div class="border-grey container form-client">
            <button type="button" class="btn label-form">
                <h1> <span class="badge grey"><i class='fas fa-user text-white'></i> Cadastro
                        de Usuários</span></h1>
            </button>

            <div class="form-center-input">
             <% if(erro){%>
                <div class="alert alert-primary alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Usuário</strong> Já consta em nossa base de dados!.
                  </div>
              <%}%> 
            <div class="input-group mb-3 input-forms ">
                <span class="input-group-text bg-primary text-white border border-primary" id="basic-addon1"><i class='far fa-id-card'
                        style='font-size:24px'></i></span>
                <input type="text"  <%if(update){%>value=""<%}%>  name="name" class="form-control border border-primary border border-primary" placeholder="Nome Completo" aria-label="razao-social"
                    aria-describedby="basic-addon1"> 
            </div>
            <div class="input-group mb-3 input-forms">
                <span class="input-group-text bg-primary text-white border border-primary" id="basic-addon1"><i class='far fa-user'
                        style='font-size:24px'></i></span>
                <input type="text" name="user_name" <%if(update){%>value=""<%}%> class="form-control border border-primary" placeholder="Username" aria-label="razao-social"
                    aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-3 input-forms">
                <span class="input-group-text bg-primary text-white border border-primary" id="basic-addon1"><i class='far fa-envelope-open'
                        style='font-size:24px'></i></span>
                <input type="text" name="email" <%if(update){%>value=""<%}%> class="form-control border border-primary" placeholder="Email" aria-label="razao-social"
                    aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-3 input-forms ">
                <span class="input-group-text bg-primary text-white border border-primary" id="basic-addon1"><i
                        class='fas fa-calendar-alt' style='font-size:24px'></i></span>
                <select class="form-select  border border-primary border border-primary fs-3" name="status"
                    aria-label="">
                    <option selected disabled>Privilégio de acesso</option>
                    <% if(user.status==1){%> 
                     <option value=1 >Adminitrador</option>
                     <% } %> 
                     <option value=2 >Cliente</option>
                     <option value=3 >Funcionário</option>
                  
                </select>
            </div>
            
               
            <div class="input-group mb-3 input-forms d-flex justify-content-end ">
            <button class="btn btn-primary text-white" type="submit"><i class='fas fa-save' style='font-size:2rem'> <%=update?"Atualizar":"Salvar"%></i> </button>
            </div>
        </div>
        </div>

    </form>

</div>
